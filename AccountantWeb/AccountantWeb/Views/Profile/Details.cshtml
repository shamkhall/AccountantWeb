@model EditUserViewModel
@inject SignInManager<ApplicationUser> signInManager


<h1>Sənin Hesabın</h1>

    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @ViewBag.UserId
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Model.Email
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label">Ad</label>
        <div class="col-sm-10">
            @Model.UserName

        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Roles" class="col-sm-2 col-form-label">Role</label>
        <div class="col-sm-10">
            @if (User.IsInRole("Admin"))
            {
                <h5>Admin</h5>
            }
            else
            {
                <h5>User</h5>
            }

        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteProfile" asp-route-Id="@ViewBag.UserId">
            <a asp-action="Profile" asp-controller="Profile" class="btn btn-primary">Redaktə et</a>

                <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Hesabınızı silmək istədiyinizə əminsiniz: @User.Identity.Name')">Hesabı Sil</button>

            </form> 
        </div>
    </div>


