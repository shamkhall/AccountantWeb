                    <h3>Tarix:</h3>
                    <h5>@Model.Date</h5>
                </div>

                <div class="form-group">


                    <h3>Qeyd:</h3>
                    <h5>@Model.Note</h5>

                </div>

                <br/>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id"/>
                    <input type="submit" value="Sil" class="btn btn-primary"/>
                    <a asp-controller="note" asp-action="index" class="btn btn-danger">Ləğv et</a>

