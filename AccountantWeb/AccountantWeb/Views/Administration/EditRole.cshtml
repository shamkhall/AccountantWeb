@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
    Layout = "_Layout";

}

<h1 style="text-align: center">Redaktə</h1>

<form method="post" class="mt-3" style="margin: 0 auto;width:700px;">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label">Role Adı</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Yenilə</button>
            <a asp-action="ListRoles" class="btn btn-primary">Ləğv et</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Bu role-da user-lər</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Heç bir user yoxdur</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditUsersInRole" 
               asp-route-roleId="@Model.Id"
               class="btn btn-primary" style="width:auto">User sil və ya əlavə et</a>
        </div>
    </div>
</form>