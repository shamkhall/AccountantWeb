@model AccountantWeb.Models.DebtsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@localizer["View"]</h1>

<div>
    <hr/>
    <dl class="row">

        <dt class="col-sm-2">
            @localizer["Author"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>


        <dt class="col-sm-2">
            @localizer["Title"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @localizer["Date"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @localizer["Amount"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @localizer["Currency"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency)
        </dd>
        

        <dt class="col-sm-2">
            @localizer["Faiz"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Percent)
        </dd>
        <dt class="col-sm-2">
            @localizer["Comment"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Create" asp-controller="DebtsRepayment" class="btn btn-primary">@localizer["Pay"]</a>
    <a asp-action="Index" asp-controller="DebtsRepayment"  class="btn btn-primary">@localizer["Receipts"]</a>
</div>