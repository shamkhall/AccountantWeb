@model AccountantWeb.Models.DebtsModel

@{
    ViewData["Title"] = "Delete";
}

<h1>@localizer["DeletePage"]</h1>

<div>
    <hr/>
    <dl class="row">

        <dt class="col-sm-2">
            @localizer["Author"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt class="col-sm-2">
            @localizer["Title"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @localizer["Date"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @localizer["Amount"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @localizer["Currency"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency)
        </dd>
        

        <dt class="col-sm-2">
            @localizer["Faiz"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Percent)
        </dd>

        <dt class="col-sm-2">
            @localizer["Comment"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="@localizer["DeletePage"]" class="btn btn-danger"/> |
    </form>
</div>