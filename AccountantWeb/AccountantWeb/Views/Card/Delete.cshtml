@model AccountantWeb.Models.CardModel

@{
    ViewData["Title"] = "Delete";
}

<h1>@localizer["Delete"]</h1>

<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @localizer["CardNumber"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CardNumber)
        </dd>
        <dt class="col-sm-2">
            CVV
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CVV)
        </dd>
        <dt class="col-sm-2">
            @localizer["CardNumber"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @localizer["Amount"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @localizer["Currency"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="@localizer["Delete"]" class="btn btn-danger"/> |
        <a asp-action="Index">@localizer["Back"]</a>
    </form>
</div>