@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model AccountantWeb.Models.TurnoverModel

@{
    ViewData["Title"] = "Create";
}

<h1>@localizer["Transfer"]</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="CardId" hidden readonly value="@ViewBag.BagCardId"/>

            <input asp-for="Author" hidden value="@User.Identity.Name"/>

            <div class="form-group">
                <label asp-for="Name" class="control-label">@localizer["Name"]</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">@localizer["Date"]</label>
                <input asp-for="Date" class="form-control"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">@localizer["Amount"]</label>
                <input asp-for="Amount" type="number" class="form-control"/>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label">@localizer["Currency"]</label>
                <input asp-for="Currency" readonly value="manat" class="form-control"/>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label">@localizer["Comment"]</label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">@localizer["Transfer"]</label>

                <select asp-for="Status" class="form-control">
                    <option value="Balansı Artır">Balansı Artır</option>
                    <option value="Balansdan Çıx">Balansdan Çıx</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@localizer["Transfer"]" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geriyə</a>
</div>